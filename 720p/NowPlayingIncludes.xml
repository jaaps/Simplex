			<control type="label">
				<posx>0</posx>
				<width>500</width>
				<font>info1</font>
				<textcolor>WhiteTrans</textcolor>
				<label>Next Track</label>
				<align>left</align>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>30</posy>
