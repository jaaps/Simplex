<?xml version="1.0"?>
<includes>
	<include name="BackgroundNowPlaying">
		<control type="group">
			<visible>MusicPlayer.NowPlayingFlipped</visible>
			<animation effect="fade" start="0" end="100" time="900">Visible</animation>
			<animation effect="fade" start="100" end="0" time="900">Hidden</animation>
			<control type="image">
				<description>Background Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<aspectratio>stretch</aspectratio>
				<texture flipx="true">background_music.png</texture>
				<fadetime>200</fadetime>
			</control>
		</control>
		<control type="group">
			<visible>!MusicPlayer.NowPlayingFlipped</visible>
			<animation effect="fade" start="0" end="100" time="900">Visible</animation>
			<animation effect="fade" start="100" end="0" time="900">Hidden</animation>
			<control type="image">
				<description>Background Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<aspectratio>stretch</aspectratio>
				<texture>background_music.png</texture>
				<fadetime>200</fadetime>
			</control>
		</control>
	</include>
	<include name="NowPlayingCurrentCover">
		<control type="group">
			<description>Current cover</description>
			<visible>Player.HasMusicPlaylist</visible>
			<control type="image">
				<width>393</width>
				<height>393</height>
								<texture diffuse="thumb_np_mask.png">$INFO[MusicPlayer.Cover]</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
			<control type="image">
				<posy>394</posy>
				<width>393</width>
				<height>393</height>
								<texture diffuse="thumb_np_fade.png" flipy="true">$INFO[MusicPlayer.Cover]</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
			<control type="image">
				<posx>-35</posx>
				<width>461</width>
				<height>401</height>
								<texture>thumb_np_overlay.png</texture>
			<aspectratio aligny="bottom" align="center" scalediffuse="false">keep</aspectratio>
			</control>
		</control>
	</include>
	<include name="NowPlayingNextCover">
		<control type="group">
			<description>Next cover</description>
			<visible>Player.HasMusicPlaylist</visible>
			<control type="image">
				<width>264</width>
				<height>264</height>
				<info>MusicPlayer.NextNewCover</info>
				<aspectratio>stretch</aspectratio>
				<bordertexture border="20">thumb_background.png</bordertexture>
				<bordersize>20</bordersize>
			</control>
		</control>
	</include>
	<include name="NowPlayingCurrentInfo">
		<control type="group">
			<description>Current track info</description>
			<control type="label">
				<posx>500</posx>
				<width>500</width>
				<font>tracktitle</font>
				<textcolor>Orange</textcolor>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>40</posy>
				<width>500</width>
				<font>trackartist</font>
				<textcolor>White</textcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>75</posy>
				<width>500</width>
				<font>trackalbum</font>
				<textcolor>Gray</textcolor>
				<label>$INFO[MusicPlayer.Album]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>108</posy>
				<width>500</width>
				<font>info2</font>
				<textcolor>DarkGray</textcolor>
				<label>$INFO[MusicPlayer.PlaylistPosition] of $INFO[MusicPlayer.PlaylistLength]</label>
				<align>right</align>
			</control>
		</control>
	</include>
	<include name="NowPlayingNextInfo">
		<control type="group">
			<description>Next track info</description>
			<control type="label">
				<posx>500</posx>
				<width>500</width>
				<font>info1</font>
				<textcolor>WhiteTrans</textcolor>
				<label>Next Track</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>30</posy>
				<width>500</width>
				<font>info1</font>
				<textcolor>WhiteTrans</textcolor>
				<label>$INFO[MusicPlayer.Offset(1).Artist]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>500</posx>
				<posy>53</posy>
				<width>500</width>
				<font>info1</font>
				<textcolor>WhiteTrans</textcolor>
				<label>$INFO[MusicPlayer.Offset(1).Title]</label>
				<align>right</align>
			</control>
		</control>
	</include>
